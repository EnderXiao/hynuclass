/* pages/subscription/subscription.wxss */
page {
  width: 100%;
  height: 100%;
}

.global {
  width: 100%;
  height: 100%;
  background-size: cover;
  display: inline-block;
  background-image: linear-gradient(to bottom right, rgb(25, 43, 57), rgb(75, 96, 115));
}

.card {
  height: 60%;
  width: 94%;
  margin: 30% 3% 30% 3%;
  border-radius: 20rpx;
  color: snow;
}

.card .card-content {
  position: relative;
  z-index: 0;
  width: 100%;
  text-align: center;
  height: 50%;

}
.card-content text{
  font-size: 20px;
  color: rgb(196, 105, 77);
  font-style: italic;
  text-shadow: 0.5px 0.5px 4px rgb(158, 88, 67);
}
